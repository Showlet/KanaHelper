<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.showlet.kanahelper.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--Charts label-->
        <TextView
            android:id="@+id/lblChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charts"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!-- layout hiragana -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <!--Hiragana chart label-->
                    <TextView
                        android:id="@+id/lblHiraganaChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Hiragana"
                        android:textColor="@color/white" />

                    <!--Hiragana chart button-->
                    <ImageButton
                        android:id="@+id/btnHiraganaChart"
                        android:onClick="openHiraganaChart"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/lblHiraganaChart"
                        android:background="@color/homeButtonColor"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@mipmap/hiragana" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1">

                    <!--Hiragana chart label-->
                    <TextView
                        android:id="@+id/lblKatakanaChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Katakana"
                        android:textColor="@color/white" />

                    <!--Hiragana chart button-->
                    <ImageButton
                        android:id="@+id/btnKatakanaChart"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/lblKatakanaChart"
                        android:background="@color/homeButtonColor"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@mipmap/katakana" />
                </RelativeLayout>
            </LinearLayout>

        <!--Charts label-->
        <TextView
            android:id="@+id/lblFlashCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flash Cards"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- layout hiragana -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!--katakana chart label-->
                <TextView
                    android:id="@+id/lblHiraganaFlash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Hiragana"
                    android:textColor="@color/white" />

                <!--Hiragana chart button-->
                <ImageButton
                    android:id="@+id/btnHiraganaFlash"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/lblHiraganaFlash"
                    android:background="@color/homeButtonColor"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@mipmap/hiragana" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1">

                <!--Hiragana chart label-->
                <TextView
                    android:id="@+id/lblKatakanaFlash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Katakana"
                    android:textColor="@color/white" />

                <!--Hiragana chart button-->
                <ImageButton
                    android:id="@+id/btnKatakanaFlash"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/lblKatakanaFlash"
                    android:background="@color/homeButtonColor"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@mipmap/katakana" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
