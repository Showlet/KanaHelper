<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.showlet.kanahelper.Main">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="6">

        <!-- Row 0 -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"

            android:text="Charts"
            android:textSize="25dp"
            android:textColor="@color/black"/>

        <!-- Row 1 -->
        <TextView
            android:text="Hiragana"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"  />

        <TextView
            android:text="Katakana"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"  />

        <ImageButton
            android:id="@+id/btnHiraganaChart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@color/paleBlue"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/hiragana" />

        <ImageButton
            android:id="@+id/btnKatakanaChart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@color/paleBlue"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/katakana" />

        <!-- Row 3 and 4 -->

        <!-- Row 0 -->
        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginTop="35dp"
            android:layout_columnSpan="2"
            android:text="Flash cards"
            android:textSize="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:text="Hiragana"
            android:id="@+id/HiraganaFlashCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"  />

        <TextView
            android:text="Katakana"
            android:id="@+id/lblKatakana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"  />

        <ImageButton
            android:id="@+id/btnHiraganaFlash"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="5"
            android:background="@color/paleBlue"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/hiragana" />

        <ImageButton
            android:id="@+id/btnKatakanaFlash"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="5"
            android:background="@color/paleBlue"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/katakana" />

    </GridLayout>
</GridLayout>
